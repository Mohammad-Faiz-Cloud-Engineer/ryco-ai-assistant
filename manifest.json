{
  "manifest_version": 3,
  "name": "Ryco",
  "version": "1.7.0",
  "description": "Premium multi-LLM AI assistant - Trigger with @Ryco anywhere",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://integrate.api.nvidia.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Ryco Settings"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/inject.css", 
        "styles/tokens.css",
        "icons/icon-16.png",
        "icons/icon-48.png",
        "icons/icon-128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
